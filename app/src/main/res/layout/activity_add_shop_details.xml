<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_200sdp"
                        android:src="@drawable/ic_logo"
                        android:visibility="gone"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="@dimen/_100sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_shop_details"
                        android:layout_gravity="start"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textStyle="bold"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/_20sdp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="start"
                        android:text="@string/shop_name"
                        android:textAllCaps="false"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp">

                        <EditText
                            android:id="@+id/etShopName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/name_of_shop"
                            android:textSize="@dimen/_10sdp"
                            android:inputType="textVisiblePassword"
                            android:fontFamily="@font/poppins_regular"
                            android:singleLine="true"
                            android:drawablePadding="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:padding="@dimen/_10sdp"
                            android:background="@null"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="start"
                        android:text="@string/open_time"
                        android:textAllCaps="false"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:contentPadding="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp">

                        <EditText
                            android:id="@+id/etOpenTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/open_time"
                            android:textSize="@dimen/_10sdp"
                            android:focusableInTouchMode="false"
                            android:focusable="false"
                            android:cursorVisible="false"
                            android:inputType="textVisiblePassword"
                            android:fontFamily="@font/poppins_regular"
                            android:singleLine="true"
                            android:drawablePadding="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:padding="@dimen/_10sdp"
                            android:background="@null"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="start"
                        android:text="@string/close_time"
                        android:textAllCaps="false"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:contentPadding="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp">

                        <EditText
                            android:id="@+id/etCloseTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/close_time"
                            android:textSize="@dimen/_10sdp"
                            android:focusableInTouchMode="false"
                            android:focusable="false"
                            android:cursorVisible="false"
                            android:inputType="textVisiblePassword"
                            android:fontFamily="@font/poppins_regular"
                            android:singleLine="true"
                            android:drawablePadding="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:padding="@dimen/_10sdp"
                            android:background="@null"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="start"
                        android:text="@string/shop_type"
                        android:textAllCaps="false"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:contentPadding="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp">

                        <Spinner
                            android:id="@+id/spShopType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:entries="@array/shop_type"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="start"
                        android:text="@string/add_address"
                        android:textAllCaps="false"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:contentPadding="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp">

                        <EditText
                            android:id="@+id/address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/select_address"
                            android:textSize="@dimen/_10sdp"
                            android:focusableInTouchMode="false"
                            android:focusable="false"
                            android:cursorVisible="false"
                            android:inputType="textVisiblePassword|textMultiLine"
                            android:fontFamily="@font/poppins_regular"
                            android:drawablePadding="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:padding="@dimen/_10sdp"
                            android:background="@null"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="start"
                        android:text="@string/landmark"
                        android:textAllCaps="false"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:contentPadding="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp">

                        <EditText
                            android:id="@+id/landAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/landmark_hint"
                            android:textSize="@dimen/_10sdp"
                            android:inputType="textVisiblePassword|textMultiLine"
                            android:fontFamily="@font/poppins_regular"
                            android:drawablePadding="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:padding="@dimen/_10sdp"
                            android:background="@null"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="start"
                        android:text="@string/add_description"
                        android:textAllCaps="false"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:contentPadding="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp">

                        <EditText
                            android:id="@+id/etDescription"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_80sdp"
                            android:hint="@string/add_description"
                            android:textSize="@dimen/_10sdp"
                            android:gravity="top"
                            android:inputType="textVisiblePassword|textMultiLine"
                            android:fontFamily="@font/poppins_regular"
                            android:drawablePadding="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:padding="@dimen/_10sdp"
                            android:background="@null"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="start"
                        android:text="@string/Shop_front_copy"
                        android:textAllCaps="false"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                  <com.makeramen.roundedimageview.RoundedImageView
                      android:id="@+id/ivShopFrontImg"
                      android:layout_width="match_parent"
                      android:layout_marginLeft="@dimen/_50sdp"
                      android:layout_marginRight="@dimen/_50sdp"
                      android:background="@color/gray"
                      android:scaleType="fitXY"
                      app:riv_border_color="@color/black"
                      app:riv_corner_radius="@dimen/_10sdp"
                      android:layout_marginTop="@dimen/_3sdp"
                      android:layout_height="@dimen/_100sdp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="start"
                        android:text="@string/business_license_img"
                        android:textAllCaps="false"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/ivbusinessLicenseImg"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/_50sdp"
                        android:layout_marginRight="@dimen/_50sdp"
                        android:background="@color/gray"
                        android:scaleType="fitXY"
                        app:riv_border_color="@color/black"
                        app:riv_corner_radius="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_height="@dimen/_100sdp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="start"
                        android:text="@string/add_id_card"
                        android:textAllCaps="false"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/ividCardImg"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/_50sdp"
                        android:layout_marginRight="@dimen/_50sdp"
                        android:background="@color/gray"
                        android:scaleType="fitXY"
                        app:riv_border_color="@color/black"
                        app:riv_corner_radius="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_height="@dimen/_100sdp"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/green_circular_bg"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/_12sdp"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_marginLeft="@dimen/_40sdp"
                        android:layout_marginRight="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:text="@string/submit" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</layout>