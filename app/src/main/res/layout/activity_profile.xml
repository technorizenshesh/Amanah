<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activities.ProfileActivity"
    android:padding="@dimen/_20sdp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_5sdp"
        >
         <androidx.cardview.widget.CardView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:elevation="@dimen/_40sdp"
            app:cardCornerRadius="@dimen/_50sdp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/left_arrow_black"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:src="@drawable/user_ic"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_30sdp"
        />
    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carson"
        android:textSize="@dimen/_18sdp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/inter_bold"
        android:textColor="@color/textColor"
        android:layout_marginTop="@dimen/_5sdp"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10sdp"
    >
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_20sdp"
    android:layout_margin="@dimen/_5sdp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp">

            <ImageView
                android:id="@+id/ivPhone"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/call_icon"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/tvPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+1 9874563210"
                android:fontFamily="@font/inter_regular"
                android:textSize="@dimen/_14sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_toRightOf="@+id/ivPhone"
                android:textColor="@color/textColor"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/gray"
                android:layout_below="@id/ivPhone"
                android:layout_toRightOf="@id/ivPhone"
                android:layout_marginLeft="@dimen/_8sdp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            >
            <ImageView
                android:id="@+id/ivMail"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/person_icon"
                android:padding="@dimen/_5sdp"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/tvMail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="carson@deniy.com"
                android:fontFamily="@font/inter_regular"
                android:textSize="@dimen/_14sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_toRightOf="@+id/ivMail"
                android:textColor="@color/textColor" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/gray"
                android:layout_below="@id/ivMail"
                android:layout_toRightOf="@id/ivMail"
                android:layout_marginLeft="@dimen/_8sdp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp">

            <ImageView
                android:id="@+id/ivSocial"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_place"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/tvSocial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Denim"
                android:fontFamily="@font/inter_regular"
                android:textSize="@dimen/_14sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_toRightOf="@+id/ivSocial"
                android:textColor="@color/textColor"
                />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/gray"
                android:layout_below="@id/ivSocial"
                android:layout_toRightOf="@id/ivSocial"
                android:layout_marginLeft="@dimen/_8sdp"
                />

        </RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_10sdp">

            <TextView
                android:id="@+id/tvNoti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notifications"
                android:visibility="gone"
                android:fontFamily="@font/inter_bold"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/textColor"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="For receiving driver messages"
                android:fontFamily="@font/inter_regular"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/textColor"
                android:layout_below="@id/tvNoti"
                />
            <Switch
                android:id="@+id/switchNoti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/red_rec_10dp_bg"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/_8sdp"
        android:textAllCaps="false"
        android:padding="@dimen/_10sdp"
        android:fontFamily="@font/poppins_medium"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/white"
        android:layout_centerVertical="true"
        android:text="Delete Account"
        android:layout_margin="@dimen/_15sdp"
        />
</RelativeLayout>
</layout>
